
@{
    ViewBag.Title = "Index";
}

<style>
    .table td, .table th {
        padding: 0.50rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        font-size: 12px;
    }
</style>

<link href="~/dist/css/Imagestylesheet.css" rel="stylesheet" />
<link href="~/dist/css/Paging.css" rel="stylesheet" />

<section ng-controller="adminCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-1">
                                <a ng-click="GoToPreviousNextPage('Previous')" class="btn btn-xs" style="background-color: green; color: white "><span class="fa fa-arrow-left"></span></a>
                            </div>
                            <div class="col-lg-9" style="margin-left:-50px">
                                <h3 class="card-title"><b>AERB Quotation Registration</b></h3>
                            </div>
                            <div class="col-lg-2" style="text-align:center">
                                @*<button type="button" class="btn btn-sm pull-left" style="background-color: green; color: white" data-toggle="modal" data-target="#Comp_add">Add Service</button>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <label class="control-label">Quotation No:</label><label style="color:red;">*</label>
                            <input type="number" name="Contact No" class="form-control"readonly minlength="1" maxlength="6" placeholder="Enter Contact No" required />
                        </div>
                        <div class="col-lg-4">
                            <label class="control-label">Customer Name:</label><label style="color:red;">*</label>
                            <input type="number" name="Contact No" class="form-control" placeholder="Enter Customer Name" required />
                        </div>
                        <div class="col-lg-4">
                            <label class="control-label">Place:</label><label style="color:red;">*</label>
                            <input type="number" name="Contact No" class="form-control" readonly minlength="1" maxlength="6" placeholder="Enter Place" required />
                        </div>
                    </div>

                    <br>
                    <div class="col-lg-12" style="margin-bottom:15px;">
                        <div class="row">
                            <div class="table-responsive col-lg-6" style="background-color:white;">
                                <table class="table table-striped table-bordered table-hover " id="example-table" cellspacing="0">
                                    <thead style="background-color: gray; color: white; ">
                                        <tr>
                                            <th>Product Details</th>
                                            <th style="width:150PX">Quantity</th>
                                            <th style="width:150PX">Price</th>
                                            <th>Action</th>
                                        </tr>
                                        <tr>
                                            <th><input style="width:150PX" class="form-control" type="text" placeholder="Search Product" /></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody style="color:black;">
                                        <tr>
                                            <td>Radiography (Fixed)</td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td><a href="" title="Add Language" data-toggle="modal" data-target="#AddProductAccessories" class="btn btn-xs btn-success">Add </a></td>
                                        </tr>
                                        <tr>
                                            <td>Radiography (Mobile)</td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td> <a href="" title="Add Language" data-toggle="modal" data-target="#AddProductAccessories" class="btn btn-xs btn-success">Add </a></td>
                                        </tr>
                                        <tr>
                                            <td>Radiography (Portable)</td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td> <a href="" title="Add Language" data-toggle="modal" data-target="#AddProductAccessories" class="btn btn-xs btn-success">Add </a></td>
                                        </tr>
                                        <tr>
                                            <td>Inventional Radiology</td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td><input type="text" class="form-control" /></td>
                                            <td> <a href="" title="Add Language" data-toggle="modal" data-target="#AddProductAccessories" class="btn btn-xs btn-success">Add </a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="table-responsive col-lg-6" style="background-color:white;">
                                <table class="table table-striped table-bordered table-hover " id="example-table" cellspacing="0" width="50%">
                                    <thead style="background-color: gray; color: white; ">
                                        <tr>
                                            <th>Product Details</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Action</th>
                                        </tr>
                                       
                                    </thead>
                                    <tbody style="color:black;">
                                        <tr>
                                            <td>Radiography (Fixed)</td>
                                            <td>50</td>
                                            <td>52000</td>
                                            <td> <a href="~/#/Index" title="Add Language" class="btn btn-xs btn-success">Remove </a></td>
                                        </tr>
                                        <tr>
                                            <td>Radiography (Mobile)</td>
                                            <td>5</td>
                                            <td>35000</td>
                                            <td> <a href="~/#/Index" title="Add Language" class="btn btn-xs btn-success">Remove </a></td>
                                        </tr>
                                        <tr>
                                            <td>Radiography (Portable)</td>
                                            <td>6</td>
                                            <td>25000</td>
                                            <td> <a href="~/#/Index" title="Add Language" class="btn btn-xs btn-success">Remove </a></td>
                                        </tr>
                                        <tr>
                                            <td>Inventional Radiology</td>
                                            <td>10</td>
                                            <td>92000</td>
                                            <td> <a href="~/#/Index" title="Add Language" class="btn btn-xs btn-success">Remove </a></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-12 " style="margin-bottom:10px">
                        <div class="row" style="margin-bottom:15px;">
                            <div class="col-lg-3">
                                <input class="form-control" readonly type="text" placeholder="Total Cost Product" />
                            </div>
                            <div class="col-lg-3">
                                <input type="button" value="Total Cost " style="background-color:orangered;color:white" />
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">AERB elora institute registration charges :</label>
                                <input class="form-control" type="text" placeholder="Enter AERB elora institute" />
                            </div>

                            <div class="col-lg-6">
                                <label class="control-label">Travel Cost :</label>
                                <input class="form-control" type="text" placeholder="Enter Travel Cost">
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">GST :</label>
                                <select class="form-control">
                                    <option value="">0</option>
                                    <option value="">5</option>
                                    <option value="">12</option>
                                    <option value="">28</option>
                                </select>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">Grand Total :</label>
                                <input class="form-control" type="text" placeholder="Grand Total" />
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">QA Test Charges:</label>
                                <input class="form-control" type="text" placeholder="Enter Test Charges" />
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">Comment:</label>
                                <textarea class="form-control" placeholder="Enter Comment"></textarea>
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label">Status:</label>
                                <select class="form-control">
                                    <option value="">Pending</option>
                                    <option value="">Done</option>
                                    <option value="">Revised</option>
                                    <option value="">Cancel</option>
                                </select>
                            </div>
                            <div style="margin-left:40%;margin-top:25PX;">
                                <input class="form-control" type="button" value="Total Calculate" style="background-color:red;color:white" />

                            </div>
                            <div style="margin-left:56%; margin-top: -35px ">
                                <input class="form-control" type="button" value="Print" style="background-color:aquamarine;color:black" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/AngularJs/Customermaster.js"></script>
}