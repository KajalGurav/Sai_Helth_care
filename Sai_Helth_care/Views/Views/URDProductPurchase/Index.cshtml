
@{
    ViewBag.Title = "Index";
}

<style>
    .table td, .table th {
        padding: 0.50rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        font-size: 12px;
    }
</style>

<style>
    .table td, .table th {
        padding: 0.50rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        font-size: 12px;
    }

    #example-table thead {
        background-color: #BE7833;
        position: sticky;
        z-index: 1024;
        color: white;
        top: 0;
    }

    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }
</style>

<section ng-controller="UrdproductCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-1">
                                <a ng-click="GoToPreviousNextPage('Previous')" class="btn btn-xs" style="background-color: green; color: white "><span class="fa fa-arrow-left"></span></a>
                            </div>
                            <div class="col-lg-9" style="margin-left:-50px">
                                <h3 class="card-title"><b>URD Product Master</b></h3>
                            </div>
                            <div class="col-lg-2" style="text-align:center">
                                <a href="/URDProductPurchase/Create" type="button" class="btn btn-sm pull-left" style="background-color: green; color: white" ng-click="DeleteProductAcc()">
                                    Add URD Product
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @*<input type="hidden" id="tempCustId" />*@

                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-3"></div> <div class="col-3"></div>
                        <div class="col-3">
                            <input type="text" class="form-control" placeholder="Search URD Product" ng-model="FARMER_SEARCH" ng-keyup="SearchAdmin()">
                        </div>
                    </div>
                    <br>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="example-table" style="font-size: 0.9rem;color:black;">
                            <thead>
                                <tr style="background-image: linear-gradient(to right,#13b757f2,#eba60a); color: black ">
                                    <th>Sr.No</th>
                                    <th>Ref.No</th>
                                    <th>Company Name</th>
                                    <th>Supplier Name</th>
                                    <th>Supplier Firm Name</th>
                                    <th>Product</th>
                                    @*<th>Model</th>*@
                                    <th>P.N.D.T. Certificate No</th>
                                    <th>Validity Date</th>
                                    <th>Status</th>
                                    <th>Reg Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="admin in UrdProductList">
                                    <td>{{page*30+$index+1}}</td>
                                    <td>{{admin.LETER_REF_NO}}</td>
                                    <td>{{admin.COMPANY_NAME}}</td>
                                    <td>{{admin.CUSTOMER_NAME}}</td>
                                    <td>{{admin.FIRM_NAME}}</td>
                                    <td>{{admin.PRODUCT_NAME}}</td>
                                    <td>{{admin.PNDT_CIRTIFICATE_NO}}</td>
                                    <td>{{admin.VALIDITY_DATE}}</td>
                                    <td><b style="color:forestgreen">{{admin.URD_STATUS}}</b></td>
                                    <td>{{admin.REG_DATE}}</td>
                                    <td>
                                        <a href="/URDProductPurchase/Edit/{{admin.UP_ID}}" @*ng-click="GotoPage(admin)"*@ title="View" class="btn btn-xs btn-info" ng-click="DeleteProductAcc()">View </a>
                                    </td>
                                </tr>
                                <tr ng-if="!pager.pages.length">
                                    <td colspan="11" style="color:black; text-align:center;"><h5><b>No record found!</b></h5></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <ul ng-if="pager.pages.length" class="pagination" style="margin-left:30px;">
                    <li ng-class="{disabled:pager.currentPage === 1}">
                        <a ng-click="setPage(1)">First</a>
                    </li>
                    <li ng-class="{disabled:pager.currentPage === 1}">
                        <span ng-if="pager.currentPage!=1"><a ng-click="setPage(pager.currentPage - 1)">Previous</a></span>
                        <span ng-if="pager.currentPage==1">Previous</span>
                    </li>
                    <li ng-repeat="page in pager.pages" ng-class="{active:pager.currentPage === page}">
                        <a ng-click="setPage(page)">{{page}}</a>
                    </li>
                    <li ng-class="{disabled:pager.currentPage === pager.totalPages}">
                        <a ng-click="setPage(pager.currentPage + 1)">Next</a>
                    </li>
                    <li ng-class="{disabled:pager.currentPage === pager.totalPages}">
                        <a ng-click="setPage(pager.totalPages)">Last</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

@section scripts
{
    <script src="~/AngularJs/URDProduct.js"></script>
    <link href="~/css/Paging.css" rel="stylesheet" />
}
