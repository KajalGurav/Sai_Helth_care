
@{
    ViewBag.Title = "Index";
}

<section ng-controller="adminCtrl">
    <div class="card-header" style="background-color:white;">
        <div class="col-lg-12">
            <div class="row" style="margin-bottom:15px">
                <div class="col-lg-1 col-md-1">
                    <a href="~/Home/Index" ng-click="GoToPreviousNextPage('Previous')" class="btn btn-xs" style="background-color:brown;color:white"><span class="fa fa-arrow-left"></span></a>
                </div>
                <div class="col-lg-8" style="text-align:center">
                    <h3 class="card-title"><b>Mobile Bill</b></h3>
                </div>
                <div class="col-lg-3">
                    <input type="text" class="form-control" placeholder="Search" ng-model="FARMER_SEARCH" ng-keyup="SearchAdmin()">
                </div>
            </div>
        </div>
        <div class="row" style="margin-bottom:10px;">
            <div class="col-lg-10"></div>
            <div class="col-lg-2" style="text-align:center">
                <button type="button" class="btn btn-sm pull-left" style="background-color:rgb(60, 179, 113); color: white" data-toggle="modal" data-target="#Emp_add">Add Loan</button>
            </div>
        </div>
    </div>
    <div class="table-responsive" style="background-color:white;">
        <table class="table table-striped table-bordered table-hover" id="example-table" cellspacing="0" width="100%">
            <thead style="background-color: SlateBlue; color: white; ">
                <tr>
                    <th>Sr. No.</th>
                    <th>Employee Name</th>
                    <th>Loan Amount</th>
                    <th>Loan on Date</th>
                    <th>Loan on Installment</th>
                    <th>Loan Outstanding</th>
                </tr>
            </thead>
            <tbody style="color:black;">
                <tr>
                    <td>101</td>
                    <td>KHAIRNAR DIPAKKUMAR</td>
                    <td>193000</td>
                    <td>06/02/2022</td>
                    <td>2000</td>
                    <td>183000</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="Emp_add">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header" style="background-color: #20B2AA; color: white; padding: 10px; ">

                    <h4 class="modal-title"><b>@*{{Action}}*@ Add Loan </b></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-body">

                        <form name="AddPayment" ng-submit="AddPayment(AddPayment.$valid)" data-toggle="validator" role="form">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label class="control-label">Employee Name :</label><label style="color:red;">*</label>
                                    <select name="Propriatory" class="form-control" ng-model="Propriatory" id="Taluka Name">
                                        <option value="">Select Employee </option>
                                        <option value="Administrator">Manoj Patil</option>
                                        <option value="ServiceAdmin">Rakesh Solanki</option>
                                        <optin value="Jr.Service Engineer">Rahul Rathod</optin>
                                        <option value="Sr. Account">Rohit Pawar</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Loan Amount:</label>
                                    <input type="number" name="Service" class="form-control" placeholder="Basic Salary" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">Installment Amount:</label>
                                    <input type="number" name="Service" class="form-control" placeholder="Loan on Date" />
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group col-md-12">
                        <input type="button" class="btn btn-sm" style="background-color:forestgreen; color: white; font-size: 14px;" ng-disabled="AddPayment.$invalid" ng-click="AddUpdateAccount()" value="Add Loan" />
                        <input type="button" value="Cancel" ng-click="Cancel()" class="btn btn-danger btn-sm" data-dismiss="modal" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

