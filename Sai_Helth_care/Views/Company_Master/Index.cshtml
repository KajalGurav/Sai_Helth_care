<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: Red;
    }

    #PAN {
        text-transform: uppercase;
    }

        #PAN::placeholder {
            text-transform: none;
        }

    #GSTN {
        text-transform: uppercase;
    }

        #GSTN::placeholder {
            text-transform: none;
        }

