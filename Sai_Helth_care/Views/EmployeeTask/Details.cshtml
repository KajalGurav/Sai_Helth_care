

<style>
    .table td, .table th {
        padding: 0.50rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        font-size: 12px;
    }
</style>


<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: Red;
    }
</style>


<section ng-controller="EmployeeTaskCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-1 col-md-1 col-sm-1">
                                <a ng-click="GoToPreviousNextPage('Previous')" class="btn btn-xs" style="background-color:green;color:white"><span class="fa fa-arrow-left"></span></a>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-10" style="text-align:left;">
                                <h3 class="card-title"><b>Employee Task Details</b></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" style="font-size: 0.9rem;color:black;">
                            <thead>
                                <tr style="background-image: linear-gradient(to right,#13b757f2,#eba60a); color: black; text-align: center; ">

                                    <th>Employee Type</th>
                                    <th ng-show="EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Location</th>
                                    <th ng-show="EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Hospital Name</th>
                                    <th ng-show="EmployeeType=='Service Engineer'">Customer Details</th>

                                    <th ng-show="EmployeeType=='Office Staff'||EmployeeType=='Service Engineer'">Allocated Work</th>
                                    <th ng-show="EmployeeType=='Office Staff'||EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Work Result</th>
                                    <th ng-show="EmployeeType=='Office Staff'">New Learning</th>




                                    <th ng-show="EmployeeType=='Office Staff'||EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Remark</th>
                                    <th ng-show="EmployeeType=='Service Engineer'">Service Eng Reason</th>

                                    <th ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Doctor Name</th>
                                    <th ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Contact Number</th>
                                    <th ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Existing Model</th>
                                    <th ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">Proposed Model</th>
                                    <th ng-show="EmployeeType=='Sales Team'">Sales Team Status</th>

                                    <th ng-show="EmployeeType=='Application Specialist'">Purpose</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Warehouse Type</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Cleaning Off</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Type</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Equipments Part Details</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">In Time</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Out Time</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Person From</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Person Name</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">Who Ask For It</th>
                                    <th ng-show="EmployeeType=='Warehouse Manager'">DC Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="ets in TaskDetailList" style=" font-size: 11px;">
                                    <td>{{ets.EmployeeType}}</td>
                                    <td ng-show="EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.Location}}</td>
                                    <td ng-show="EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.HospitalName}}</td>
                                    <td ng-show="EmployeeType=='Service Engineer'">{{ets.CustomerDetails}}</td>

                                    <td ng-show="EmployeeType=='Office Staff'||EmployeeType=='Service Engineer'">{{ets.AllocatedWork}}</td>
                                    <td ng-show="EmployeeType=='Office Staff'||EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.WorkResult}}</td>
                                    <td ng-show="EmployeeType=='Office Staff'">{{ets.NewLearning}}</td>


                                    <td ng-show="EmployeeType=='Office Staff'||EmployeeType=='Service Engineer'||EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.Remark}}</td>

                                    <td ng-show="EmployeeType=='Service Engineer'">{{ets.ServiceEngReason}}</td>

                                    <td ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.DoctorName}}</td>
                                    <td ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.ContactNumber}}</td>
                                    <td ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.ExistingModel}}</td>
                                    <td ng-show="EmployeeType=='Sales Team'||EmployeeType=='Application Specialist'">{{ets.ProposedModel}}</td>
                                    <td ng-show="EmployeeType=='Sales Team'">{{ets.SalesTeamStatus}}</td>

                                    <td ng-show="EmployeeType=='Application Specialist'">{{ets.Purpose}}</td>

                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.WarehouseType}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.CleaningOff}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.Type}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.EquipmentsPartDetails}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.InTime}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.OutTime}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.PersonFrom}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.PersonName}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.WhoAskForIt}}</td>
                                    <td ng-show="EmployeeType=='Warehouse Manager'">{{ets.DCNumber}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts{
    <link href="~/css/Paging.css" rel="stylesheet" />
    <script src="~/AngularJs/EmployeeTask.js"></script>


    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $("#START_DATE").datepicker({ changeMonth: true, changeYear: true, maxDate: 0 });
        $("#START_DATE").datepicker("option", "dateFormat", "dd/mm/yy");
        $("#START_DATE").datepicker("option", "monthNamesShort", ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]);
        $("#START_DATE").datepicker("option", "showMonthAfterYear", false);
        $("#START_DATE").datepicker("option", "yearRange", "2000:2060");

        $("#END_DATE").datepicker({ changeMonth: true, changeYear: true, maxDate: 0 });
        $("#END_DATE").datepicker("option", "dateFormat", "dd/mm/yy");
        $("#END_DATE").datepicker("option", "monthNamesShort", ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]);
        $("#END_DATE").datepicker("option", "showMonthAfterYear", false);
        $("#END_DATE").datepicker("option", "yearRange", "2000:2060");
    </script>
}
