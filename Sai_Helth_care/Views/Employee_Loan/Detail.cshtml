
@{
    ViewBag.Title = "Detail";
}

<style>
    .table td, .table th {
        padding: 0.50rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        font-size: 12px;
    }
</style>

<section ng-controller="EmloyeeLoanCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-1">
                                <a ng-click="GoToPreviousNextPage('Previous')" class="btn btn-xs" style="background-color: green; color: white "><span class="fa fa-arrow-left"></span></a>
                            </div>
                            <div class="col-lg-9" style="margin-left:-50px">
                                <h3 class="card-title"><b>Employee Loan Details</b></h3>
                            </div>
                            <div class="col-lg-2" style="text-align:center">
                                <button type="button" class="btn btn-sm pull-left" style="background-color: green; color: white" data-toggle="modal" ng-click="AdminClick()">Add Loan</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <b>Loan Outstanding = </b><span>{{LOAN_OUTSTANDING}}</span>

                    <div class="table-responsive" style="margin-top:10px;">
                        <table class="table table-bordered" style="font-size: 0.9rem;color:black;">
                            <thead>
                                <tr style="background-image: linear-gradient(to right,#13b757f2,#eba60a); color: black ">
                                    @*<th>Sr. No.</th>*@
                                    @*<th>Employee Name</th>*@
                                    <th>Loan Amount</th>
                                    <th>Loan on Installment</th>
                                    <th>Installment Date</th>
                                    @*<th>Action</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="admin in EmployeeLoanList">
                                    <td>{{admin.LOAN_AMOUNT}}</td>
                                    <td>{{admin.LOAN_INSTALLMENT}}</td>
                                    <td>{{admin.SALARY_DATE}}</td>
                                    @*<td>{{admin.INSTALLMENT_AMOUNT}}</td>
                            <td>{{admin.LOAN_OUTSTANDING}}</td>
                            <td>
                                <a href="~/Employee_Loan/Detail" class="btn btn-sm pull-left" style="background-color: green; color: white">View</a>
                            </td>*@
                                </tr>
                                <tr ng-if="!pager.pages.length">
                                    <td colspan="6" style="color:black; text-align:center;"><h5><b>No record found!</b></h5></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="modal fade" id="Admin_Addupdate">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header" style="background-image: linear-gradient(to right,#13b757f2,#eba60a); color: white; padding: 10px; ">

                                <h4 class="modal-title"><b>Add Amount</b></h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="card-body">

                                    <form name="AddPayment" ng-submit="AddPayment(AddPayment.$valid)" data-toggle="validator" role="form">
                                        <div class="row">
                                            <div class="form-group col-md-12">
                                                <label class="control-label">Loan Settlement Amount:</label>
                                                <input type="number" name="LOAN_OUTSTANDING" readonly ng-model="LOAN_OUTSTANDING" class="form-control" placeholder="Enter Settlement Amount" required />
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="form-group col-md-12">
                                    <input type="button" class="btn btn-sm" style="background-color:forestgreen; color: white; font-size: 14px;" ng-disabled="AddPayment.$invalid" ng-click="AddAdmin()" value="Add Amount" />
                                    <input type="button" value="Cancel" ng-click="Cancel()" class="btn btn-danger btn-sm" data-dismiss="modal" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section scripts
{
    <script src="~/AngularJs/EmployeeLoanDetail.js"></script>
    <link href="~/css/Paging.css" rel="stylesheet" />
}