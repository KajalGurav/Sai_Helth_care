
@{
    ViewBag.Title = "Index";
}




<style>
    .table td, .table th {
        padding: 0.50rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        font-size: 12px;
    }
</style>

<section ng-controller="MindrayQuotationCtrl">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-1">
                                <a ng-click="GoToPreviousNextPage('Previous')" class="btn btn-xs" style="background-color: green; color: white "><span class="fa fa-arrow-left"></span></a>
                            </div>
                            <div class="col-lg-9" style="margin-left:-50px">
                                <h3 class="card-title"><b>Mindray Quotation</b></h3>
                            </div>
                            <div class="col-lg-2">
                                <a href="~/MindrayQuotation/QueAdd"
                                     type="button" class="btn btn-sm pull-left" style="background-color: rgb(60, 179, 113); color: white">Add Quotation
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-3">
                            <input type="text" class="form-control" ng-model="FROM_DATE" id="STARTING_DATE" autocomplete="off" placeholder="Select From Date" />
                        </div>
                        <div class="col-3">
                            <input type="text" class="form-control" ng-model="TO_DATE" id="ENDING_DATE" autocomplete="off" placeholder="Select To Date" />
                        </div>
                        <div class="col-1">
                            <input type="button" class="form-control  note-btn-block" style="background-color: #E9967A; color: black; width:90px; text-align:center;" value="Get Data" ng-click="getdate()" />
                        </div>
                        <div class="col-2"></div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-3"></div> <div class="col-3"></div>
                        <div class="col-3">
                            <input type="text" class="form-control" placeholder="Search Quotation" ng-model="FARMER_SEARCH" ng-keyup="SearchAdmin()">
                        </div>
                    </div>
                    <br>
                    <div class="table-responsive">
                        <table class="table table-bordered" style="font-size: 0.9rem;color:black;">
                            <thead>
                                <tr style="background-image: linear-gradient(to right,#13b757f2,#eba60a); color: black ">
                                    <th>#</th>
                                    <th>Quote No.</th>
                                    <th>Quote. Date</th>
                                    <th>Customer Name</th>
                                    <th>PNDT Status</th>
                                    <th>Status</th>
                                    <th>Quot Type</th>
                                    <th>PNDT No</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="admin in MindrayQuotationList">
                                    <td>{{$index+1}}</td>
                                    <td>{{admin.QUOTATION_NO}}</td>
                                    <td>{{admin.QUOTATION_DATE}}</td>
                                    <td>{{admin.CUSTOMER_NAME}}</td>
                                    <td>{{admin.PNDT_STATUS}}</td>
                                    <td>{{admin.STATUS}}</td>
                                    <td>{{admin.QUOTATION_TYPE}}</td>
                                    <td>{{admin.PNDT_NO}}</td>
                                    <td><a href="~/MindrayQuotation/ViewQuote/{{admin.MQ_ID}}" style="color:black" title="View" class="btn btn-xs btn-primary">View </a></td>
                                </tr>
                                <tr ng-if="!pager.pages.length">
                                    <td colspan="9" style="color:black; text-align:center;"><h5><b>No record found!</b></h5></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>



@section scripts
{





    <script src="~/AngularJs/MindrayQuotation.js"></script>

}



