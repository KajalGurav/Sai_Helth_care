
@{
    ViewBag.Title = "Index";
}


<section class="content" ng-controller="TourCtrl">
    <div class="box box-success">
        <div class="row" style="padding:10px;">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-4" style="margin-bottom:10px;">
                        <input type="text" class="form-control" ng-model="FROM_DATE" id="STARTING_DATE" autocomplete="off" placeholder="Select Date" />
                    </div>
                    <div class="col-2">
                        <input type="button" class="form-control" style="background-color:green;color:white;" value="Get Data" ng-click="getdate()" />
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-head">
                        <div class="ibox-title"><b>Employee Visit Map </b></div>
                    </div>
                    <div class="ibox-body">
                        <div>
                            <label for="alphabet" hidden>
                                Alphabets
                                <input type="radio" id="alphabet" name="letter_number" value="1" checked="checked"
                                       onclick="LoadMap()" />
                            </label>
                        </div>
                        <div class="table-responsive">
                            <table border="0" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td class=scrollable>
                                        <div id="dvMap" style="width:1400px; height:600px">
                                        </div>
                                    </td>
                                    <td id="legend" hidden></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <br>
        </div>
    </div>
</section>




@section Scripts{
    <script src="~/AngularJs/TourMap.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDwS-jnMbtbJW8sq3qABVgoBInkoUQMPPk&libraries=places&callback=initAutocomplete" async defer></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    <script>

        $(function () {
            $("#STARTING_DATE").datepicker({ changeMonth: true, changeYear: true });
            $("#STARTING_DATE").datepicker("option", "dateFormat", "dd/mm/yy");
            $("#STARTING_DATE").datepicker("option", "monthNamesShort", ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]);
            $("#STARTING_DATE").datepicker("option", "showMonthAfterYear", false);
            $("#STARTING_DATE").datepicker("option", "yearRange", "2000:2060");

            $("#STARTING_DATE").datepicker({ maxDate: 0 });
        });

        $(function () {
            $("#ENDING_DATE").datepicker({ changeMonth: true, changeYear: true });
            $("#ENDING_DATE").datepicker("option", "dateFormat", "dd/mm/yy");
            $("#ENDING_DATE").datepicker("option", "monthNamesShort", ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]);
            $("#ENDING_DATE").datepicker("option", "showMonthAfterYear", false);
            $("#ENDING_DATE").datepicker("option", "yearRange", "2000:2060");
            $("#ENDING_DATE").datepicker({ maxDate: 0 });
        });


        $(function () {
            $("#STARTING_DATE1").datepicker({ maxDate: 0 });
        });
        $(function () {
            $("#ENDING_DATE1").datepicker({ maxDate: 0 });
        });
    </script>
}

